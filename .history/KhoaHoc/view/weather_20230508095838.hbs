<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



 
    {{!-- <link rel="stylesheet" href="C:/Users/Mr.Huy/Documents/NodeJs/Code NodeJs/khoa/KhoaHoc/public/css/weather.css"> --}}
    <link rel="stylesheet" href="/KhoaHoc/public/css/weather.css">
</head>

<body class="bg-dark" cz-shortcut-listen="true">
    <div class="container hieght-full">
        <div class="weather">
            <div class="weather__content text-center">
                {{#if status}}
                        <section class="search">
                            <h1 class="place" id="place">{{region}}</h1>
                            <h2 class="country" id="country">{{country}}</h2>
                            <p class="temperature" id="temperature">{{temperature}}°C</p>
                            <div class="container">
                                <div class="row">
                                    <div class="col-4">
                                        <i class="fa fa-wind icon"></i>
                                        <p class="result" id="wind">{{ wind_speed}}</p>
                                    </div>
                                    <div class="col-4">
                                        <i class="fa fa-cloud-rain icon"></i>
                                        <p class="result" id="rain">{{precip}}</p>
                                    </div>
                                    <div class="col-4">
                                        <i class="fa fa-cloud icon"></i>
                                        <p class="result" id="cloud">{{cloudcover}}</p>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <form action="/" class="form-search container">
                                    <div class="input-group mb-3">
                                        <input type="text" name="address" class="form-control input-search" placeholder="Vị Trí"
                                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary btn-search" type="submit" id="search">
                                                Tìm Kiếm
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                {{else }}
                        <section class="not-search">
                            <div>
                                <form action="/" class="form-search container">
                                    <h1 class="locaNotSearch">Nhập Vào Vị Trí</h1>
                                    <div class="input-group mb-3">
                                        <input type="text" name="address" class="form-control input-search" placeholder="Vị Trí"
                                            aria-label="Recipient's username" aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary btn-search" type="submit" id="search">
                                                Tìm Kiếm
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                {{/if}}
            </div>
        </div>
    </div>


</body>

</html>